@{
    ViewBag.Title = "Login";
}

<div class="width-max" style="position:relative;">
    <div class="login-container">
        <h2>Conectar-se</h2>
        <form id="form-login" method="POST">
            <div class="form-group">
                <label for="InputEmail">Email</label>
                <input type="email" class="control-properties normal-control" id="InputEmailLogin" aria-describedby="emailHelp" placeholder="Email">
                <span class="text-danger" id="span-wrong-email"></span>
            </div>
            <div class="form-group">
                <label for="InputSenha">Senha</label>
                <input type="password" class="control-properties normal-control" id="InputSenhaLogin" placeholder="Senha">
                <span class="text-danger" id="span-wrong-pass"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="ManterConectado">
                <label class="form-check-label" for="ManterConectado">Manter conectado</label>
            </div>
            <button type="submit" class="btn btn-primary btn-submit-login">Conectar-se</button>
        </form>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Login")
}